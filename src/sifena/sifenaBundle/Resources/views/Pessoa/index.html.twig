{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Pessoa list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Genero</th>
                <th>Ddn</th>
                <th>Estadocivil</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('pessoa_show', { 'id': entity.id }) }}">{{ entity.nome }}</a></td>
                <td>{{ entity.genero }}</td>
                <td>{% if entity.ddn %}{{ entity.ddn|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.estadoCivil }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('pessoa_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('pessoa_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('pessoa_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
